{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "incremental": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "bundles/lib",
    "paths": {
      "model/*": [ "./src/model/*" ],
      "ui/*": [ "./src/ui/*" ]
    },
    "preserveConstEnums": false,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2018"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}